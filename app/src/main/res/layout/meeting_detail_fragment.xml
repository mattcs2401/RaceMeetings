<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextView labels. -->

    <TextView
        android:id="@+id/id_tv_meetingId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Meeting ID"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="32dp" />

    <TextView
        android:id="@+id/id_tv_meetingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Meeting Date"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintRight_toRightOf="@+id/id_tv_meetingId"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_meetingId" />

    <TextView
        android:id="@+id/id_tv_trackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Track Name"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintRight_toRightOf="@+id/id_tv_meetingDate"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_meetingDate" />

    <TextView
        android:id="@+id/id_tv_clubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Club Name"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintRight_toRightOf="@+id/id_tv_trackName"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_trackName" />

    <TextView
        android:id="@+id/id_tv_racingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Racing Status"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintRight_toRightOf="@+id/id_tv_clubName"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_clubName" />

    <TextView
        android:id="@+id/id_tv_numRaces"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="No Of Races"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintRight_toRightOf="@+id/id_tv_racingStatus"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_racingStatus" />

    <TextView
        android:id="@+id/id_tv_barrierTrial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:text="Barrier Trial"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintRight_toRightOf="@+id/id_tv_numRaces"
        app:layout_constraintTop_toBottomOf="@+id/id_tv_numRaces" />

    <!-- TextView values.-->

    <TextView
        android:id="@+id/id_tv_meetingdId_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toRightOf="@+id/id_tv_meetingId"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_tv_meetingDate_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/id_tv_meetingdId_val"
        tools:layout_editor_absoluteY="62dp" />

    <TextView
        android:id="@+id/id_tv_trackName_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/id_tv_meetingDate_val"
        tools:layout_editor_absoluteY="89dp" />

    <TextView
        android:id="@+id/id_tv-clubName_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/id_tv_trackName_val"
        tools:layout_editor_absoluteY="119dp" />

    <TextView
        android:id="@+id/id_tv_racingStatus_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/id_tv-clubName_val"
        tools:layout_editor_absoluteY="145dp" />

    <TextView
        android:id="@+id/id_tv_num_races-Val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/id_tv_racingStatus_val"
        tools:layout_editor_absoluteY="175dp" />

    <TextView
        android:id="@+id/id_tv_barrierTraila_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium"
        app:layout_constraintLeft_toLeftOf="@+id/id_tv_num_races-Val"
        tools:layout_editor_absoluteY="203dp" />

</android.support.constraint.ConstraintLayout>

